<%- include header %>

    <h1>List Book</h1>
    <h2>Lama Peminjaman 2 hari</h2>
    <a href="/customer/do_logout">
        <button>Logout</button>
    </a>
    <a href="/cart">
        <button>Cart</button>
    </a>
    <p>Jumlah Cart
        <%= quantity %>
    </p>
    <form action="/restaurants/search" class="form-inline" method="POST">
        <div class="form-group">
            <label for="search">Search by: </label>
            <select name="column_name" class="form-control">
                <option>title</option>
                <option>menu type</option>
                <option>rating</option>
                <option>price</option>
            </select>
        </div>
        <div class="form-group">
            <label for="keyword">Keyword:</label>
            <input type="text" name="keyword" class="form-control" Ëœ>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% listBook.forEach(function(bookList) {%>
                <tr>
                    <td>
                        <%= bookList.id %>
                    </td>
                    <td>
                        <%= bookList.title %>
                    </td>
                    <td>
                        <%= bookList.description %>
                    </td>
                    <td>
                        <%= bookList.stock %>
                    </td>
                    <td>
                        <a href="/cart/add/<%= bookList.id %>">Add Book to Cart</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    </body>

    </html>